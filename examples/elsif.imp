procedure main () is
  var n : integer;
begin
  while true loop
    output("Enter number: ");
    input(n);

    if n == 42 then
      break;
    elsif n > 0 then
      output("positive"); newline;
    elsif n < 0 then
      output("negative"); newline;
    else
      output("zero"); newline;
    end if;
  end loop;
end main;
